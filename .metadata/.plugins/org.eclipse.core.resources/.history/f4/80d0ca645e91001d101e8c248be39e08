package recursion;

public class NumberOfDigits {
	
	public static int numOfDigit(int n) {
		int count =0;
		if(n == 0)
			return 0;
		if(n != 0) {
			count++;
			numOfDigit(n/10);
			
		}
		
		return count;
	}

	public static void main(String[] args) {
		System.out.println(numOfDigit(153));
		

	}

}
